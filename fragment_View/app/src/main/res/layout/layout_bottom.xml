<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/tab_bg2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

   <LinearLayout
       android:id="@+id/address"
       android:orientation="vertical"
       android:layout_weight="1"
       android:layout_width="wrap_content"
       android:gravity="center"
       android:layout_height="wrap_content">

       <ImageButton
           android:id="@+id/address_img"
           android:clickable="false"
           android:background="@drawable/tab_address_normal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView

           android:text="联系人"
           android:textSize="15sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

   </LinearLayout>

    <LinearLayout
        android:id="@+id/find_frd"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:clickable="false"
            android:id="@+id/find_frd_img"
            android:background="@drawable/tab_find_frd_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="联系"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:clickable="false"
            android:id="@+id/settings_img"
            android:background="@drawable/tab_settings_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="设置"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weixin"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:clickable="false"
            android:id="@+id/weixin_img"
            android:background="@drawable/tab_weixin_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="短信"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
